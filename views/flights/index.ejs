<%- include('../partials/header') %>
    <h1><%= title %></h1>
    <table>
        <thead>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Departure</th>
        </thead>
        <tbody>
            <% flights.forEach(function(flight) { %>
            <tr>
                <td><%= flight.airline %></td>
                <td><%= flight.airport %></td>
                <td><%= flight.flightNo %></td>
                <td><%= flight.departs %></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
    
<%- include('../partials/footer') %>