<%- include('../partials/header') %>
    <div class="container-sm">
        <h1>
            <%= title %>
        </h1>
        <table class="table table-dark table-striped">
            <thead>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight Number</th>
                <th>Departure</th>
            </thead>
            <tbody>
                <% flights.forEach(function(flight) { %>
                    <tr>
                        <td>
                            <%= flight.airline %>
                        </td>
                        <td>
                            <%= flight.airport %>
                        </td>
                        <td>
                            <%= flight.flightNo %>
                        </td>
                        <td>
                            <%= flight.departs %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <%- include('../partials/footer') %>