<%- include('../partials/header') %>
  <div class="container-sm">
  <h1><%= title %></h1>
  <form action="/flights" method="POST">
    <label class="form-label">Airline:
      <select name="airline" class="form-select" multiple aria-label="multiple select example">
        <option value="Emirates Airlines" selected>Emirates Airlines</option>
        <option value="Cathay Pacific">Cathay Pacific</option>
        <option value="American Airlines">American Airlines</option>
      </select>
    </label><br>
    <label class="form-label">Airport:
      <select name="airport" class="form-select" multiple aria-label="multiple select example">
        <option value="JFK" selected>New York JFK</option>
        <option value="DXB">Dubai International Airport</option>
        <option value="LGW">London Gatwick</option>
        <option value="MXP">Milano Malpensa</option>
        <option value="LAX">Los Angeles International Airport</option>
      </select>
    </label><br>
    <div class="input-group input-group-lg">
      <span class="input-group-text" id="inputGroup-sizing-lg">Flight Number</span>
      <input type="number" name="flightNo" min="10" max="9999" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
    </div><br>
    <div class="input-group input-group-lg">
      <span class="input-group-text" id="inputGroup-sizing-lg">Expected Departure</span>
        <input type="datetime-local" name="departs" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
    </div><br>
    <button type="submit" class="btn btn-dark">Add Flight</button>
  </form>
  <p>
    <%= errorMsg %>
  </p>
</div>
  <%- include('../partials/footer') %>