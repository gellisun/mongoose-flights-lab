<%- include('../partials/header') %>
    <h1><%= title %></h1>
    <form action="/flights" method="POST">
        <label>Airline:
            <select name="airline">
                <option value="Emirates Airlines" selected>Emirates Airlines</option>
                <option value="Cathay Pacific">Cathay Pacific</option>
                <option value="American Airlines">American Airlines</option>
              </select>
        </label><br>
        <label>Airport:
            <select name="airport">
                <option value="DXB">Dubai International Airport</option>
                <option value="LGW">London Gatwick</option>
                <option value="MXP">Milano Malpensa</option>
                <option value="JFK" selected>New York JFK</option>
                <option value="LAX">Los Angeles International Airport</option>
              </select>
        </label><br>
        <label>Flight Number:
            <input type="number" name="flightNo" min="10" max="9999">
        </label><br>
        <label>Expected Departure:
          <input type="datetime-local" name="departs">
        </label><br>
        <button type="submit">Add Flight</button>
      </form>
      <p>
          <%= errorMsg %>
      </p>
<%- include('../partials/footer') %>